<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
    1.表示映射文件 名称不能重复
    2.表示与接口的映射关系.
  -->
<mapper namespace="com.jt.manager.mapper.ItemMapper">
<select id="findItemByPage" resultType="Item">
    select * from tb_item order by updated desc
    limit #{start},#{rows}
</select>

    <select id="findItemCatNameById" resultType="string">
        select name from tb_item_cat where id=#{id}
    </select>

    <update id="updateStatus">
        update tb_item set status =#{status},updated=now()
        where id in(
        <foreach collection="ids" item="id" separator=",">
            #{id}
        </foreach>
        )
    </update>

</mapper>